{{#power-select
  allowClear=true
  dropdownClass='slide-fade'
  options=results
  placeholder=placeholder
  selected=(find-by results 'id' selectedValue)
  onchange=(action changeAction)
  as |result|
}}
  {{#if result.id}}
    {{format-item result.id format}} <span class='badge'>{{format-item result.attributes.value 'cleanNum'}}</span>
  {{/if}}
{{/power-select}}
