			<div class="modalSectionTitle">Context<i class="fa fa-pie-chart"></i></div>
				<div class="well well-sm">
					<p>
					data viz here
					</p>
				</div>
			<div class='modalSectionTitle'>Notes<i class="fa fa-sticky-note-o"></i></div>
			{{#bs-form}}
			  {{bs-form-element
				controlType='text'
				placeholder=inputPlaceholder
				label='Collection name'
				invisibleLabel=true
				value=name
				autofocus=true
				required=true
			  }}
			{{/bs-form}}

			{{#bs-button
			  type='primary'
			  size='sm'
			}}
				Save to Collection
			{{/bs-button}}

