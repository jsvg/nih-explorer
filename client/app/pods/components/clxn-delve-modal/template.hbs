
{{#bs-modal open=isShowingModal size='lg' header=false ody=false footer=false}}
	{{#bs-modal-header}}
		Collection Details: {{collectionData.name}}
	{{/bs-modal-header}}
	{{#bs-modal-body}}
		<div class="container-fluid">
			<div class="modalSectionTitle"><i class="fa fa-info"></i>Workflow</div>
				<div class="well well-sm">
					<div class="row row-meta">
						<div class="col-md-5 col-sm-5">
							<small>
								<strong>Query:</strong>
								{{#each asadfKeto as |a|}}
									<p>{{a}}: {{get asdf a}}</p>
								{{/each}}
							</small>
							{{collectionData}}
						</div>
						<div class="col-md-2 col-sm-2">
							<i class="fa fa-plus "></i>
						</div>
						<div class="col-md-5 col-sm-5">
							<small><strong>Filters:</strong></small>
							<ol>
								<!-- use ol if we decide to rank these somehow: either 1)order user clicked if possible or 2) order of importance determined by client or us -->

								<!-- list format ~ search-table-modal -->
								<li>Funded by
									{{!#if collection.fundingMechanism}}
										{{!collection.fundingMechanism}}
									{{!/if}}
								</li>

								<!-- with filter input before filter name -->
								{{!#if collection.funding_mechanism}}
									<li>Activity Code{{!collection.activity_code}}</li>
								{{!/if}}

								<li>{{!collection.icName}}</li>
								<li>{{!collection.org}}</li>
							</ol>
						</div>
						<!-- <div class="col-md-4">
							<aside><small><strong>Grant Count:</strong></small></aside>
							<aside><small><strong>Sum Cost:</strong></small></aside>
							<aside><small><strong>Average Cost:</strong></small></aside>
						</div> -->
					</div>
				</div>

