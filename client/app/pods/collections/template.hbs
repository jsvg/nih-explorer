{{! search }}
<div class='container-fluid'>

  {{! info top row }}
  <div id='collection-info' class='row'>
    <div class='col-md-12'>
      <div class='col-md-5 pull-left'>
        {{#bs-button size='xs' type='primary' class='clearBtn'}}
          Create new from batch {{fa-icon 'fa-plus-circle'}}
        {{/bs-button}}
      </div>
      <div class='col-md-7 pull-right text-right'>
        <div class='action-link'>Compare</div> |
        <div class='action-link'>Group</div> |
        <div class='action-link'>Combine</div> |
        <div class='action-link'>Export</div> |
        <div class='action-link'>Delete</div>
      </div>
    </div>
  </div>

  {{! table }}
  <div class='row'>
    <div class='col-md-12'>

      <table class='table table-hover'>
        <thead>
          <th></th>
          <th>Collection Name</th>
          <th>Grant Count</th>
          <th>Sum Cost</th>
          <th>Average Cost</th>
          <th>Created</th>
          <th>Updated</th>
          <th>Actions</th>
        </thead>
        <tbody>
          {{#each model as |collection|}}
            <tr>
              <td><div>{{input type='checkbox'}}</div></td>
              <td><div>{{collection.name}}</div></td>
              <td><div>{{format-item collection.itemCount 'cleanNum'}}</div></td>
              <td><div>{{format-item collection.sumCost 'currency'}}</div></td>
              <td><div>{{format-item collection.avgCost 'currency'}}</div></td>
              <td><div>{{moment-from-now collection.createdOn}}</div></td>
              <td><div>{{moment-from-now collection.updatedOn}}</div></td>
              <td>
                <div class='row-actions'>
                  {{fa-icon 'cloud-download'}}
                  {{fa-icon 'pencil'}}
                  {{fa-icon 'trash'}}
                </div>
              </td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>

  </div>
</div>
